@model IndexViewModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Tiger Tix: @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<style>
    .Container {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f56600;
    }

    .div1 {
        background-color: white;
        border-radius: 15px;
    }

    form {
        width: 400px;
        padding: 15px;
    }

    .createAccount {
        color: white;
        font-size: 10px;
        background-color: #0d6efd;
        border: none;
        width: 100px;
        height: 30px;
        margin-bottom: 5px;
        border-radius: 15px;
    }
</style>

<body>

    <!---------
        <h1></h1>
        <h1>Welcome to Tiger Tix!</h1>
    <form method="post">
        <label>Your Name:</label>
        <br />
        <input type="text name="UserName" />
        <input type="submit" value="Store Name" />
    </form>
        -->

    <div class="Container">
        <div class="div1">
            <form method="post" asp-controller="Account" asp-action="Login" action="/App/UserAuthentication" >
                <img class="mb-4" src="/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
                <h1 class="h3 mb-3 fw-normal">Please sign in using your Clemson Student ID</h1>
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingInput" name="CUID"
                      autocomplete="off"  placeholder="name@example.com">
                    <label for="floatingInput">CUID: </label>
                </div>
                <br />
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingPassword" name="Password"
                      autocomplete="off"  placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>
                <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
                <br />
            </form>
            
              @if (ViewData["Message"] != null)
            {
                <p>@ViewData["Message"]</p>
            }

             <button class="createAccount" type="button"
                    onclick="location.href='@Url.Action("ShowUsers", "App")'">Create Account</button>
             <button class="createAccount" type="button"
                    onclick="location.href='@Url.Action("ShowTickets", "App")'">Create Ticket</button>
                <p class="mt-5 mb-3 text-body-secondary">© 2024</p>






           


           

            
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
